<?xml version="1.0" encoding="UTF-8"?>
<!-- simplest possible DRF, create a quick look cube and measure contrast if possible-->
<DRF ReductionType="SpectralScience" name="Quicklook Automatic Datacube Extraction" ShortName="quickcube" >>
<dataset InputDir="${GPI_RAW_DATA_DIR}" OutputDir="${GPI_REDUCED_DATA_DIR}">
   <fits FileName="" />
</dataset>
<!-- <module name="Apply Reference Pixel Correction" Save="0" gpitv="0" before_and_after='1' /> -->
<module name="Load Wavelength Calibration" CalibrationFile="AUTOMATIC" />
<module name="Subtract Dark Background" CalibrationFile="AUTOMATIC" Save="0" gpitv="0" />
<module name="Update Spot Shifts for Flexure" method="Lookup" manual_dx="0" manual_dy="0" display="no" Save="0" gpitv="0" />
<module name="Destripe science image" method="calfile" abort_fraction="0.9" chan_offset_correction="0" fraction="0.7" high_limit="1000" Save_stripes="0" display="no" remove_microphonics="0" method_microphonics="1" CalibrationFile="" Plot_micro_peaks="no" save_microphonics="no" micro_threshold="0.01" Save="0" gpitv="0" />
<module name="Interpolate bad pixels in 2D frame" CalibrationFile="AUTOMATIC" method="vertical" Save="0" gpitv="0" before_and_after="0" />
<module name="Assemble Spectral Datacube" Save="0" gpitv="0" />
<module name="Interpolate Wavelength Axis" Spectralchannels="37" Save="1" gpitv="5" />
<module name="Check for closed-loop coronagraphic image" err_on_false="0" />
<module name="Measure satellite spot locations" refine_fits="1" reference_index="0" search_window="20" Save="0" loc_input="0" x1="0" y1="0" x2="0" y2="0" x3="0" y3="0" x4="0" y4="0" />
<module name="Measure satellite spot peak fluxes" gauss_fit="1" reference_index="0" ap_rad="7" Save="0" />
<module name="Measure Contrast" Save="0" Display="1" SaveProfile="AUTO" SavePNG="" contrsigma="5." slice="-1" DarkHoleOnly="1" contr_yunit="0" contr_xunit="0" yscale="0" contr_yaxis_type="1" contr_yaxis_min="0.00000001" contr_yaxis_max="1." />
</DRF>
