<?xml version="1.0" encoding="UTF-8"?>
<!-- simplest possible DRF, just makes a simple data cube w/ no calibrations for Polarization mode -->
<DRF ReductionType="PolarimetricScience" name="Quicklook Automatic Polarimetry Extraction">
<dataset InputDir="$(GPI_RAW_DATA_DIR)" OutputDir="$(GPI_DRP_OUTPUT_DIR)">
   <fits filename=""/>
</dataset>
<module name="Load Polarimetry Spot Calibration" CalibrationFile="AUTOMATIC" />
<module name="Subtract Dark Background" CalibrationFile="AUTOMATIC" Save="0" gpitv="0" />
<module name="Update Spot Shifts for Flexure" method="None" manual_dx="0" manual_dy="0" Save="0" gpitv="3" display="no" />
<module name="Destripe science frame micro" method="calfile" abort_fraction="0.9" fraction="0.7" high_limit="1000" chan_offset_correction="0" Save_stripes="0" Save="0" display="no" gpitv="0" remove_microphonics="0"  method_microphonics="1" CalibrationFile="AUTOMATIC" Plot_micro_peaks="no" save_microphonics="no" micro_treshold="0.01"/>
<module name="Interpolate bad pixels in 2D frame" method="all8"  Save="0" gpitv="2" CalibrationFile="AUTOMATIC" before_and_after="0"/> 
<module name="Assemble Polarization Cube" Save="1" gpitv="5" />
</DRF>
